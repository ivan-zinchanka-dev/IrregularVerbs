<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:baseConverters="clr-namespace:IrregularVerbs.CodeBase.Converters"
                    xmlns:customConverters="clr-namespace:IrregularVerbs.Converters"
                    xmlns:configs="clr-namespace:IrregularVerbs.Models.Configs">
    
    <baseConverters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
    <baseConverters:EnumToInt32Converter x:Key="EnumToNumberConverter"/>
    
    <customConverters:AnswerResultToBrushConverter x:Key="AnswerResultToBrushConverter"/>
    <customConverters:AnswerResultToInfoConverter x:Key="AnswerResultToInfoConverter"/>
    
    <configs:ApplicationSettings x:Key="ApplicationSettings" 
                                NativeLanguage="Russian"
                                VerbsCount="10"
                                AlphabeticalOrder="True"
                                EnableToolTips="True"
                                DarkTheme="False"/>
    
</ResourceDictionary>